<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.abhinav.calculator.MainActivity"
        android:background="#ECEFF1">

        <TextView
            android:id="@+id/textPreview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="50+20"
            android:textColor="#000000"
            android:textAlignment="textEnd"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/textPreview"
            android:text="70"
            android:textColor="#000000"
            android:textAlignment="textEnd"
            android:textSize="80sp" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CFD8DC"
        tools:context="com.example.abhinav.calculator.MainActivity">

        <Button
            android:id="@+id/btnC"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:text="C"
            android:textColor="#03A9F4"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btnCe"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_toEndOf="@id/btnC"
            android:layout_toRightOf="@id/btnC"
            android:text="CE"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_toEndOf="@id/btnCe"
            android:layout_toRightOf="@id/btnCe"
            android:text="รท"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_toEndOf="@+id/btnDiv"
            android:layout_toRightOf="@+id/btnDiv"
            android:text="X"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@id/btnMul"
            android:layout_toEndOf="@+id/btn3"
            android:layout_toRightOf="@+id/btn3"
            android:text="-"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@id/btnMinus"
            android:layout_toEndOf="@+id/btn6"
            android:layout_toRightOf="@+id/btn6"
            android:text="+"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="162dp"
            android:layout_below="@id/btnPlus"
            android:layout_toEndOf="@+id/btn9"
            android:layout_toRightOf="@+id/btn9"
            android:text="="
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />


        <Button
            android:id="@+id/btn1"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@+id/btnC"
            android:text="1"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@+id/btnCe"
            android:layout_toEndOf="@+id/btn1"
            android:layout_toRightOf="@+id/btn1"
            android:text="2"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@+id/btnDiv"
            android:layout_toEndOf="@+id/btn2"
            android:layout_toRightOf="@+id/btn2"
            android:text="3"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@+id/btn1"
            android:text="4"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@+id/btn2"
            android:layout_toEndOf="@+id/btn4"
            android:layout_toRightOf="@+id/btn4"
            android:text="5"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@+id/btn3"
            android:layout_toEndOf="@+id/btn5"
            android:layout_toRightOf="@+id/btn5"
            android:text="6"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@+id/btn4"
            android:text="7"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@+id/btn5"
            android:layout_toEndOf="@+id/btn7"
            android:layout_toRightOf="@+id/btn7"
            android:text="8"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@+id/btn6"
            android:layout_toEndOf="@+id/btn8"
            android:layout_toRightOf="@+id/btn8"
            android:text="9"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@id/btn7"
            android:text="."
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@id/btn8"
            android:layout_toEndOf="@+id/btnDot"
            android:layout_toRightOf="@+id/btnDot"
            android:text="0"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_below="@id/btn9"
            android:layout_toEndOf="@+id/btnZero"
            android:layout_toRightOf="@+id/btnZero"
            android:text="%"
            android:background="#ffffff"
            android:textAlignment="center"
            android:textSize="@dimen/btnText"
            android:layout_margin="1dp" />
    </RelativeLayout>

</LinearLayout>
